<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AttractionsInfoActivity"
    tools:showIn="@layout/activity_attractions_info">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/map_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitXY"
            android:src="@drawable/city_map" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/att_desc"
            style="TextAppearance.App.Descriptions"
            android:layout_width="match_parent"
            android:layout_height="244dp"
            android:layout_below="@id/map_image"
            android:layout_marginLeft="@dimen/edge_padding"
            android:layout_marginStart="@dimen/edge_padding"
            android:layout_marginTop="@dimen/edge_padding" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/photo_section_label"
            style="@style/TextAppearance.App.Captions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/att_desc"
            android:layout_marginLeft="@dimen/edge_padding"
            android:layout_marginStart="@dimen/edge_padding"
            android:layout_marginTop="@dimen/edge_padding"
            android:text="@string/photo_heading" />

        <LinearLayout
            android:id="@+id/photo_group1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/photo_section_label"
            android:layout_marginBottom="@dimen/spacing"
            android:layout_marginEnd="@dimen/edge_padding"
            android:layout_marginLeft="@dimen/edge_padding"
            android:layout_marginRight="@dimen/edge_padding"
            android:layout_marginStart="@dimen/edge_padding"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/photo1"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginEnd="@dimen/spacing"
                android:layout_marginRight="@dimen/spacing"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="centerCrop" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/photo2"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="3"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/photo5"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@id/photo_group1"
            android:layout_marginBottom="@dimen/spacing"
            android:layout_marginEnd="@dimen/edge_padding"
            android:layout_marginLeft="@dimen/edge_padding"
            android:layout_marginRight="@dimen/edge_padding"
            android:layout_marginStart="@dimen/edge_padding"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/photo5"
            android:layout_marginBottom="@dimen/spacing"
            android:layout_marginEnd="@dimen/edge_padding"
            android:layout_marginLeft="@dimen/edge_padding"
            android:layout_marginRight="@dimen/edge_padding"
            android:layout_marginStart="@dimen/edge_padding"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/photo3"
                android:layout_width="136dp"
                android:layout_height="90dp"
                android:layout_marginEnd="@dimen/spacing"
                android:layout_marginRight="@dimen/spacing"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="centerCrop" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/photo4"
                android:layout_width="194dp"
                android:layout_height="90dp"
                android:layout_weight="2"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="centerCrop" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>